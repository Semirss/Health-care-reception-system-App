<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#1A1A1A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/doctorNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor: Dr. John Smith"
            android:textColor="#1DCD9F"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appointmentDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-05-10"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/appointmentTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 10:00 AM"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end"
            android:weightSum="2">

            <Button
                android:id="@+id/rescheduleButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reschedule"
                android:textColor="#fff"
                android:backgroundTint="#1976D2"
                android:layout_marginEnd="8dp"
                android:minHeight="48dp"
                android:paddingVertical="12dp"/>
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
