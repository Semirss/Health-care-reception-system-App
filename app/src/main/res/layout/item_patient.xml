<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Number"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:paddingTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:padding="12dp">

            <ImageButton
                android:id="@+id/buttonAddAppointment"
                android:layout_width="58dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_add_card_24"
                android:scaleType="centerInside"
                app:tint="@color/white"
                android:contentDescription="Add Appointment"
                android:backgroundTint="@color/black"
                android:layout_marginEnd="12dp" />

            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="58dp"
                android:layout_height="48dp"
                android:src="@drawable/baseline_auto_delete_24"
                android:scaleType="centerInside"
                app:tint="@color/white"
                android:contentDescription="Delete Patient"
                android:backgroundTint="@color/black" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
