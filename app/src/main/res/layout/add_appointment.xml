<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landback2"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/appointmentContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/login_card_border"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Title -->
        <TextView
            android:id="@+id/appointmentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Appointment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp"/>

        <!-- Doctor Name -->
        <EditText
            android:id="@+id/doctorInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Doctor Name"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingVertical="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1DCD9F" />

        <!-- Date -->
        <EditText
            android:id="@+id/dateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:inputType="date"
            android:minHeight="48dp"
            android:paddingVertical="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1DCD9F" />

        <!-- Time -->
        <EditText
            android:id="@+id/timeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textColor="#FFFFFF"
            android:textColorHint="#999999"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:inputType="time"
            android:minHeight="48dp"
            android:paddingVertical="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1DCD9F" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitAppointment"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            android:textColor="#000000"
            android:backgroundTint="#1DCD9F" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
